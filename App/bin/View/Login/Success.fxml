<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" stylesheets="@ResetPassword.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Control.Controller_Success">

    <children>
        <VBox layoutX="50" layoutY="80" spacing="20" style="-fx-alignment: center;" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="80">

            <Label fx:id="lblSuccess" alignment="CENTER" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1b4332;" text="Đăng ký thành công!">
            <font>
               <Font name="Constantia" size="12.0" />
            </font></Label>

            <Button fx:id="btnLogin" onAction="#handleSuccess" prefHeight="35" prefWidth="120" style="-fx-background-color: #0078d7; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Đăng nhập" />
        </VBox>
    </children>
</AnchorPane>
