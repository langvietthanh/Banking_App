<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Control.Main.Setting.Controller_ChangePIN">
    <children>
        <VBox alignment="CENTER" spacing="15" prefWidth="400" prefHeight="350" layoutX="100" layoutY="50">
            <children>
                <Label text="THAY ĐỔI MÃ PIN" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                <!-- Nhập mã PIN cũ -->
                <PasswordField fx:id="txtOldPIN" promptText="Nhập mã PIN cũ"/>
                <Label fx:id="errorPIN" textFill="red" visible="false" />

                <!-- Nhập mã PIN mới -->
                <PasswordField fx:id="txtNewPIN" promptText="Nhập mã PIN mới"/>
                <Label fx:id="errorNewPIN" textFill="red" visible="false" />

                <!-- Nhập lại mã PIN mới -->
                <PasswordField fx:id="txtNewPIN2" promptText="Nhập lại mã PIN mới"/>

                <HBox spacing="10" alignment="CENTER">
                    <Button text="Xác nhận" fx:id="btnChangePIN" onAction="#handleChangePIN" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    <Button text="Quay về" fx:id="btnBack" onAction="#handleBack" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                </HBox>
            </children>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
