<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Control.Main.Setting.Controller_UserInfor">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.topAnchor="30" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30">
            <!-- Tiêu đề -->
            <Label text="THÔNG TIN NGƯỜI DÙNG" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <!-- Khung chứa thông tin -->
            <GridPane hgap="20" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="150"/>
                    <ColumnConstraints halignment="LEFT" minWidth="250"/>
                </columnConstraints>

                <!-- CCCD -->
                <Label text="CCCD:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="lblCCCD" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Họ tên -->
                <Label text="Họ tên:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label fx:id="lblHoTen" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- Ngày sinh -->
                <Label text="Ngày sinh:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="lblNgaySinh" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- Địa chỉ -->
                <Label text="Địa chỉ:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Label fx:id="lblDiaChi" text="-" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <!-- Số điện thoại -->
                <Label text="Số điện thoại:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <Label fx:id="lblSDT" text="-" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <!-- Email -->
                <Label text="Email:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <Label fx:id="lblEmail" text="-" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <!-- Hạn CCCD -->
                <Label text="Hạn CCCD:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <Label fx:id="lblHanCCCD" text="-" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Nút trở về -->
            <Button text="← Trở về" onAction="#handleBack"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20;"/>
        </VBox>
    </children>
</AnchorPane>
