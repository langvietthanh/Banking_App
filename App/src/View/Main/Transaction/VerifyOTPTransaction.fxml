<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="330.0" prefWidth="520.0" styleClass="otp-pane" stylesheets="@VerifyOTPTransaction.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Control.Main.Transaction.Controller_Transaction">

    <children>
        <!-- Tiêu đề OTP -->
        <Text layoutX="119.0" layoutY="80.0" styleClass="otp-title" text="NHẬP MÃ OTP">
         <font>
            <Font name="Constantia" size="41.0" />
         </font></Text>

        <!-- Ô nhập OTP -->
        <TextField fx:id="TextField_OTP" layoutX="145.0" layoutY="131.0" prefHeight="48.0" prefWidth="230.0" promptText="Nhập mã OTP" styleClass="otp-input" />

        <!-- Label lỗi hoặc thông báo -->
        <Label fx:id="Label_OTPHetHan" layoutX="180.0" layoutY="170.0" styleClass="otp-error" text="" />

        <!-- Nút xác nhận (giống Transaction) -->
        <Button layoutX="218.0" layoutY="219.0" onAction="#handleXacNhanOTP" prefHeight="30.0" prefWidth="90.0" styleClass="main-button" text="Xác nhận" />
    </children>
</AnchorPane>
