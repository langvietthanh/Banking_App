<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="316.0" prefWidth="475.0" styleClass="pin-pane" stylesheets="@VerifyPINTransaction.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Control.Main.Transaction.Controller_Transaction">

    <children>
        <!-- Tiêu đề -->
        <Text layoutX="99.0" layoutY="79.0" styleClass="pin-title" text="NHẬP MÃ PIN">
            <font>
                <Font name="Constantia" size="41.0" />
            </font>
        </Text>

        <!-- Nhãn “PIN” -->
        <Label layoutX="99.0" layoutY="145.0" styleClass="pin-label" text="PIN">
            <font>
                <Font size="20.0" />
            </font>
        </Label>

        <!-- Ô nhập PIN -->
        <TextField fx:id="TextField_PIN" layoutX="145.0" layoutY="138.0" prefHeight="40.0" prefWidth="200.0" promptText="Nhập mã PIN" styleClass="pin-input" />

        <!-- Nút xác thực -->
        <Button layoutX="188.0" layoutY="220.0" onAction="#handleXacThucMaPIN" prefHeight="38.0" prefWidth="100.0" styleClass="main-button" text="Xác thực" />
    </children>
</AnchorPane>
