<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Control.Main.Setting.Controller_Setting">

    <!-- Tiêu đề -->
    <Label layoutX="230.0" layoutY="30.0"
           text="CÀI ĐẶT TÀI KHOẢN"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- Nút xem thông tin -->
    <Button fx:id="btnXemThongTin"
            layoutX="180.0"
            layoutY="100.0"
            prefWidth="240.0"
            prefHeight="40.0"
            text="Xem thông tin tài khoản"
            onAction="#handleXemThongTin"
            style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;"/>

    <!-- Nút thay đổi mật khẩu -->
    <Button fx:id="btnDoiMatKhau"
            layoutX="180.0"
            layoutY="160.0"
            prefWidth="240.0"
            prefHeight="40.0"
            text="Thay đổi mật khẩu"
            onAction="#handleDoiMatKhau"
            style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;"/>

    <!-- Nút thay đổi mã PIN -->
    <Button fx:id="btnDoiMaPIN"
            layoutX="180.0"
            layoutY="220.0"
            prefWidth="240.0"
            prefHeight="40.0"
            text="Thay đổi mã PIN"
            onAction="#handleDoiMaPIN"
            style="-fx-background-color: #1976D2; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;"/>

    <!-- Nút đăng xuất (dưới cùng) -->
    <Button fx:id="btnDangXuat"
            layoutX="180.0"
            layoutY="320.0"
            prefWidth="240.0"
            prefHeight="40.0"
            text="Đăng xuất"
            onAction="#handleDangXuat"
            style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;"/>
</AnchorPane>
