<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="Control.Main.Setting.Controller_ChangePassword">
    <children>
        <VBox alignment="CENTER" spacing="15" prefWidth="400" prefHeight="350" layoutX="100" layoutY="50">
            <children>
                <Label text="THAY ĐỔI MẬT KHẨU" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                <TextField fx:id="txtNewPassword" promptText="Nhập mật khẩu mới"/>
                <Label fx:id="errorMK" textFill="red" visible="false" />

                <TextField fx:id="txtNewPassword2" promptText="Nhập lại mật khẩu mới"/>

                <PasswordField fx:id="txtPIN" promptText="Nhập mã PIN"/>
                <Label fx:id="errorPIN" textFill="red" visible="false" />

                <HBox spacing="10" alignment="CENTER">
                    <Button text="Xác nhận" fx:id="btnChange" onAction="#handleChangePassword" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    <Button text="Quay về" fx:id="btnBack" onAction="#handleBack" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                </HBox>
            </children>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
